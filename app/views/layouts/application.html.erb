<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav>
    <div class="links"> 
      <p class = "navp"><%= link_to 'Events', events_path %></p>
      <% if current_user %>
        <p class = "navp"> <%= link_to 'Create Event', new_event_path %></p>
        <p class ="navp"> <%= link_to 'Profile', user_path(current_user) %></p>
      <% end %>
    </div>

    <div class="links">
      <% if current_user %>

        <%= form_for :session, url:logout_path do |f|%>
          <%= f.submit "Logout", method: :delete %>
        <% end %>

      <% else %>
        <p class = "navp"><%= link_to 'Sign Up', new_user_path %></p>
        <p class = "navp"><%= link_to 'Sign In', signin_path %></p>
      <% end %>
    </div>
  </nav>

  <body>
  <%= flash.notice %>

    <div class= "main">
      <%= yield %>
    </div>
  </body>
</html>
