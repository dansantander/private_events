<h1>User</h1>
<p>
  <strong> Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong> User Id:</strong>
  <%= @user.id %>
</p>

  <%= link_to 'Create Event', new_event_path, class: 'btn gree-highlight' %><br>
  <%= link_to 'Invite a User to an Event', new_invitation_path, class: 'btn' %>


   <ul>
      <strong>Events Created By Me:</strong>

      <% @myevents.each do |e| %>
        <li>
          <p><%= link_to e.title, event_path(e) %></p>
          <p><%= e.event_date %></p>
        </li>
        <% end %>
    </ul>

   <ul>
      <strong>Upcoming Events:</strong>
      <% @upcoming_event.each do |e| %>
        <li>
          <p><%= link_to e.title, event_path(e) %></p>
          <p><%= e.event_date %></p>
        </li>
        <% end %>
    </ul>

    <ul>
      <strong>Previous Events:</strong>
      <% @prev_event.each do |e| %>
        <li>
          <p><%= link_to e.title, event_path(e) %></p>
          <p><%= e.event_date %></p>
        </li>
        <% end %>
    </ul>

    <ul>
      <strong>Pending Invitations:</strong>
      <% @unconfirmed_invitations.each do |e| %>
        <li>
          <p>Invitation ID: <%= link_to e.id, event_path(e) %></p>
          <p><%#= e.event_date %></p>
          <p><%= link_to "Accept Invitation", invitation_path(e) %></p>
        </li>
        <% end %>
    </ul>
